---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

    <div class="relative w-full min-h-screen flex items-center justify-center">
        <div class="absolute top-0 left-0 w-full h-1/3 bg-gradient-to-b"></div>
        <div class="w-11/12 max-w-4xl bg-gray-140 text-gray-900 p-8 rounded-lg shadow-2xl">
            <h1 class="text-5xl font-bold mb-4 text-left pb-10">Encuentra tu mejor horario</h1>
            <div class="flex items-center space-x-4 mb-6">
                <button class="bg-yellow-500 text-white px-4 py-2 rounded flex items-center space-x-2">
                    <span><img src="/public/images/autobus.png" alt="símbolo de omnibus" class="w-7"></span>
                    <span>PASAJES</span>
                </button>
            </div>
            
            <h2 class="text-3xl mb-4">¿A dónde te llevamos?</h2>
            
            <div class="flex space-x-4 mb-4">
                <button id="soloIda" class="bg-yellow-500 text-white px-4 py-2 rounded cursor-pointer ">Solo ida</button>
                <button id="idaVuelta" class="text-yellow-500 cursor-pointer">Ida y vuelta</button>
            </div>
            
            <form class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="pb-5">
                        <label class="block text-gray-700 ">Origen</label>
                        <select id="category" onchange="filterServices()" class=" w-full p-3 border rounded bg-gray-100">
                            <option value="" disabled selected >Indique punto de partida</option>
                            <option value="1000">MONTEVIDEO (TRES CRUCES)</option>
                            <option value="7741">25 DE AGOSTO</option>
                            <option value="7792">25 DE MAYO</option>
                            <option value="8301">AEROPUERTO</option>
                            <option value="0116">CANELONES</option>
                            <option value="7768">CARDAL</option>
                            <option value="8306">CASTELLANOS</option>
                            <option value="7300">CASUPA</option>
                            <option value="5201">FLORIDA</option>
                            <option value="7192">FRAY MARCOS</option>
                            <option value="7754">INDEPENDENCIA</option>
                            <option value="0053">LAS PIEDRAS</option>
                            <option value="1095">LIBERTAD</option>
                            <option value="5035">MENDOZA</option>
                            <option value="0001">MONTEVIDEO (T. RIO BLANCO)</option>
                            <option value="8302">PANDO</option>
                            <option value="0073">PROGRESO</option>
                            <option value="1119">PUNTAS DE VALDEZ</option>
                            <option value="2025">RODRIGUEZ</option>
                            <option value="8305">SAN BAUTISTA</option>
                            <option value="7088">SAN JACINTO</option>
                            <option value="1300">SAN JOSE</option>
                            <option value="8307">SAN RAMON</option>
                            <option value="0156">SANTA LUCIA</option>
                            <option value="8304">SANTA ROSA</option>
                            <option value="7162">TALA</option>
                        </select> 
                    </div>
                    <div class="pb-5">
                        <label class="block text-gray-700">Destino</label>
                        <select id="category" onchange="filterServices()" class="w-full p-3 border rounded bg-gray-100">
                            <option value="" disabled selected >Indique punto de</option>
                            <option value="7741">25 DE AGOSTO</option>
                            <option value="7792">25 DE MAYO</option>
                            <option value="8301">AEROPUERTO</option>
                            <option value="0116">CANELONES</option>
                            <option value="7768">CARDAL</option>
                            <option value="8306">CASTELLANOS</option>
                            <option value="7300">CASUPA</option>
                            <option value="5201">FLORIDA</option>
                            <option value="7192">FRAY MARCOS</option>
                            <option value="7754">INDEPENDENCIA</option>
                            <option value="0053">LAS PIEDRAS</option>
                            <option value="1095">LIBERTAD</option>
                            <option value="5035">MENDOZA</option>
                            <option value="8302">PANDO</option>
                            <option value="0073">PROGRESO</option>
                            <option value="1119">PUNTAS DE VALDEZ</option>
                            <option value="2025">RODRIGUEZ</option>
                            <option value="8305">SAN BAUTISTA</option>
                            <option value="7088">SAN JACINTO</option>
                            <option value="1300">SAN JOSE</option>
                            <option value="8307">SAN RAMON</option>
                            <option value="0156">SANTA LUCIA</option>
                            <option value="8304">SANTA ROSA</option>
                            <option value="7162">TALA</option>
                            <option value="1000">MONTEVIDEO (TRES CRUCES)</option>
                            <option value="0001">MONTEVIDEO (T. RIO BLANCO)</option>
                        </select>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="pb-5">
                        <label class="block text-gray-700">Fecha de ida</label>
                        <input type="date" class="w-full p-3 border rounded bg-gray-100">
                    </div>
                    <div id="fechaVueltaContainer" class="hidden">
                        <label class="block text-gray-700">Fecha de vuelta</label>
                        <input type="date" class="w-full p-3 border rounded bg-gray-100">
                    </div>
                    <div class="pb-5">
                        <label class="block text-gray-700">Cantidad de Asientos</label>
                        <select class="w-full p-3 border rounded bg-gray-100">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                </div>
                
                <button class="bg-yellow-500 text-xl text-white px-6 py-3 rounded w-full cursor-pointer">Buscar</button>
            </form>
        </div>
    </div>







    <script>
        document.getElementById("idaVuelta").addEventListener("click", function() {
            document.getElementById("fechaVueltaContainer").classList.remove("hidden");
        });
        
        document.getElementById("soloIda").addEventListener("click", function() {
            document.getElementById("fechaVueltaContainer").classList.add("hidden");
        });
    </script>

    

